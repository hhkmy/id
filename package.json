    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier": "3.0.3",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-toml": "1.0.0",
    "tailwindcss": "^3.3.3"
